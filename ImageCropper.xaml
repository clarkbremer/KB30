<UserControl x:Class="KB30.ImageCropper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KB30"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Image Name="image"></Image>
        <Canvas Name="cropperCanvas" MouseDown="cropperMouseDown" MouseMove="cropperMouseMove" MouseUp="cropperMouseUp" MouseWheel="cropperMouseWheel" Background="Transparent">
            <Rectangle Name="cropper" Stroke="Lime" Fill='#77ffffff' ></Rectangle>
        </Canvas>
    </Grid>
</UserControl>
