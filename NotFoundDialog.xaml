<Window x:Class="KB30.NotFoundDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KB30"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="File Not Found" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <TextBlock Name="filename_message">File Not Found: xyzaskjfdhakjsdhfaklsdhfakj </TextBlock>

            <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button IsDefault="True" Name="btnDialogSkip" Click="btnDialogSkip_Click" Margin="10,0,10,0">Skip this file</Button>
                <Button IsCancel="True" Name="btnDialogAbort" Click="btnDialogAbort_Click" Margin="10,0,10,0">Abort Loading</Button>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
