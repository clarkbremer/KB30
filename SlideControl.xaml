<UserControl x:Class="KB30.SlideControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KB30"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <Border x:Name="SelectBorder" Background="Transparent" BorderBrush="Red" Margin="2" BorderThickness="5" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Name="button">
            <Grid>
                <Image Name="image" />
                <TextBlock x:Name="caption" Background="White" Text="Filename and Size" HorizontalAlignment="Center" VerticalAlignment="Bottom"></TextBlock>
            </Grid>
            <Button.ContextMenu>
                <ContextMenu Name="SlideContextMenu">
                    <MenuItem Name="CMDelete" Header="Delete Slide"></MenuItem>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Border>
</UserControl>
