<UserControl x:Class="KB30.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KB30"
             mc:Ignorable="d" >
    <Grid>
        <Border x:Name="border" BorderBrush="Transparent" BorderThickness="4">
            <StackPanel Orientation="Vertical" Margin="5">
                <Image x:Name="Thumbnail" Height="150" Width="150" Source="resources/hourglass.jpg"></Image>
                <TextBlock x:Name="Caption" Height="Auto" Width="150" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Text="This is way too long to fit on a single line in the control."></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
